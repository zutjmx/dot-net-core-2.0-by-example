@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">            
            <img src="~/images/DevVsTest.png" alt="Developers Vs Testers" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                   Developers Vs Testers
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                        View Trailor
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Cers.png" alt="The C#ers" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    The C#ers
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                        View Trailor
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/DayInTheLifeOfNETDeveloper.png" alt="A day in the life of .NET developer" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    A day in the life of .NET developer
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525029&clcid=0x409">
                        View Trailor
                    </a>
                </p>
            </div>
        </div>        
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <h3>Book Now</h3>
    <label for="movies">Select Movie:</label>
    <select class="form-control" id="movies">
        <option id="1" value="A day in the life of .NET developer">A day in the life of .NET developer</option>
        <option id="2" value="Developers Vs Testers">Developers Vs Testers</option>
        <option id="3" value="The C# ers">The C# ers</option>
    </select>
    <br />
    <label for="time" id="timeLabel">Select Time:</label>
    <select class="form-control" id="time">
        <option id="10" value="11">11:00 A.M</option>
        <option id="10" value="14">2:00 P.M</option>
        <option id="10" value="16">6:00 P.M</option>
        <option id="10" value="20">10:00 P.M</option>
    </select>
    <br />
    <button id="book" class="btn btn-default">Book</button>
</div>
